###2-4:list分区规则下的prepare操作
create table t6(pk int primary key, a int) partition by list(pk) (partition q0 values in(1,3),partition q1 values in(2,4,5));
--real_sleep 1
insert into t6 values(1,1),(2,2);
--real_sleep 1
prepare stmt1 from update t6 set a=? where pk=?;
prepare stmt2 from update t6 set a=a+? where pk=?;
set @a=1;
set @b=2;
execute stmt1 using @a,@b;
execute stmt1 using @b,@a;
execute stmt2 using @a,@b;
select * from t6;
drop table t6;

