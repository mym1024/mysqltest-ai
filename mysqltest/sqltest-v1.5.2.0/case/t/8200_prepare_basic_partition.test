###2-1:hash分区规则下的prepare操作
--error 5077
drop partition function h;
create hash partition function h(x) 'x+1';
create table t1(pk int primary key,b int)partition by(hs,h,pk);
--real_sleep 5
insert into t1 values(1,1);
prepare stmt1 from select * from t1 where pk=? and b=?;
prepare stmt2 from select pk,b from t1 where pk=? and b=?;
prepare stmt3 from select j1.pk from t1 as j1,t1 as j2 where j1.pk=j2.pk and j1.pk=?;
set @a=1;
set @b=1;
execute stmt1 using @a,@b;
execute stmt2 using @a,@b;
execute stmt3 using @a;
drop table t1;

###2-2:enum分区规则下的prepare操作
--error 5077
drop partition function e;
create enum partition function e(x) '[(1)],[(2)],[(3)]';
create table t2(pk int primary key,b int)partition by(em,e,pk);
--real_sleep 1
insert into t2 values(1,0),(2,0),(3,0);
--real_sleep 2
prepare stmt1 from select * from t2 where pk=?;
prepare stmt2 from select pk from t2 where pk=?;
prepare stmt3 from select j1.pk from t2 as j1,t2 as j2 where j1.pk=j2.pk and j1.pk=?;
set @a=1;
--real_sleep 1
execute stmt1 using @a;
execute stmt2 using @a;
execute stmt3 using @a;
drop table t2;

###2-3:range分区规则下的prepare操作
create table t4(pk int primary key,a int)partition by range(pk) (partition r0 values less than(5),partition r1 values less than(10),partition r2 values less than maxvalue);
--real_sleep 1
prepare stmt1 from replace into t4 values(1,?);
prepare stmt2 from replace into t4 values(1,?),(2,?);
prepare stmt3 from replace into t4 values(1,?),(?,?);
set @a=1;
set @b=2;
--real_sleep 1
execute stmt1 using @a;
execute stmt1 using @b;
execute stmt2 using @b,@a;
execute stmt3 using @a,@b,@b;

select * from t4;
drop table t4;

create table t5(pk int primary key,a int)partition by range(pk) (partition r0 values less than(5),partition r1 values less than(10),partition r2 values less than(15),partition r3 values less than maxvalue);
