###2-1:在enum分区规则下，结合group by测试case..when的使用
create enum partition function e1(x)'[(1)],[(2)],[(3)],[(4)]';

create table a1(rowkey_suffix int primary key,price int) partition by(ea1,e1,rowkey_suffix);
--real_sleep 3
insert into a1(rowkey_suffix,price) values(1,1);
insert into a1(rowkey_suffix,price) values(2,2);
insert into a1(rowkey_suffix,price) values(3,3);
insert into a1(rowkey_suffix,price) values(4,4);

select case price when 1 then 2 when 2 then 3 else 0 end as fcase,count(*) from a1 group by fcase;
select case price when 1 then 'one' when 2 then 'two' else 'nothing' end as fcase,count(*) from a1 group by fcase;
drop table a1;
drop partition function e1;

###2-2:结合max函数，返回null值
create table a1(rowkey_suffix int primary key,price int);
select max(case price when 1 then rowkey_suffix else null end) as color from a1 group by price;
drop table a1;

create table t1(a int primary key,b int) partition by list(a)(partition q1 values in(2,4,8),partition q2 values in(5,10,11));
--real_sleep 3
insert into t1(a) values(2),(11),(8);
select min(a),min(case when 1=1 then a else NULL end),
min(case when 1!=1 then NULL else a end)
from t1 where b=3 group by b;
drop table t1;

###2-3:在hash分区下，结合join
create hash partition function h1(x) 'x+1';
create table t1(a bigint primary key,b bigint) partition by(ta1,h1,a);
create table t2(c bigint primary key,d bigint) partition by range(c) (partition p1 values less than(2),partition p2 values less than(5),partition p3 values less than maxvalue);
