#select /*+ join(hash_join_single) */* from t1.c1, count(t2.c1),sum(t2.c2),max(t2.c2),min(t2.c2),avg(t2.c2) from t1 full join t2 on t2.c1=t1.c1 group by t1.c3 having sum(t2.c2) < 20;
