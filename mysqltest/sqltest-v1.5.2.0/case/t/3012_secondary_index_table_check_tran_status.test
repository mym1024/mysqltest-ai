insert into t1 values(1,1,1),(2,2,2),(3,3,3);
create index il0 on t1(c2) storing (c3);

--echo "merge"
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT major_freeze | tail -1;
--real_sleep 600
