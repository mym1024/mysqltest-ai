set autocommit=0;
create table t1 (c1 int primary key,c2 int,c3 int);
insert into t1 values(1,1,1),(2,2,2),(3,3,3);
insert into t1 values(4,4,4);
replace into t1 values(5,5,5);
replace into t1 values(6,6,6),(7,7,7),(8,8,8);
commit;

create index il0 on t1(c2) storing (c3);
select * from t1;
select * from t1 where c1=1;
select * from t1 where c2=2;

--echo "merge"
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT major_freeze | tail -1;
--real_sleep 600
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT stat -o merge | tail -1;

set autocommit=0;
show index on t1;
