--disable_warnings
drop table if exists c;
--enable_warnings


###2-1:
create table c(c1 int primary key,c2 varchar(8));

#autocommit=0时，不会自动提交事务，即需要用commit语句来显示提交事务，否则major_freeze时，未提交事务会自动回滚
set autocommit = 0;
insert into c values(1,1);
#虽然使用了insert语句后没有commit，但事务还没回滚，所以还是可以查到刚insert的数据
select * from c where c1 = 1;
select * from c;
#major_freeze时未commit事务自动回滚
--echo "merge"
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT major_freeze | tail -1;
--real_sleep 600
select * from c where c1 = 1;
select * from c;
--error 119
commit;
select * from c where c1 = 1;
select * from c;


