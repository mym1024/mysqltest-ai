--disable_warnings
drop table if exists t1;
--enable_warnings
#建表使用range分区
create table t1(c1 int primary key,c2 varchar(20)) partition by range(c1)(partition r0 values less than(5),partition r1 values less than(10), partition r2 values less than(15),partition r3 values less than maxvalue);
--echo "refresh"
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT refresh_schema |tail -1;
--real_sleep 5

#无数据更新无效
Update /*hotspot*/ t1 set c2='aaaa' where c1=1;
Update /*hotspot*/ t1 set c2='aaaa';
select * from t1;
#插入数据
replace into t1 values(0,'zzzz'),(1,'aaaa'),(2,'bbbb'),(3,'cccc');
select * from t1;
#2-1 多次更新热数据
Update /*hotspot*/ t1 set c2='aaab' where c1=1;
select * from t1;
Update /*hotspot*/ t1 set c2='aaac' where c1=1;
select * from t1;
Update /*hotspot*/ t1 set c2='aaad' where c1=1;
select * from t1;
#2-2使用prepare语句进行热数据更新
set @a='aaae';
prepare stmt from Update /*hotspot*/ t1 set c2=? where c1=1;
prepare stmt0 from Update /*hotspot*/ t1 set c2=? where c1=0;
execute stmt using @a;
execute stmt0 using @a;
select * from t1;

set @a='aaaf';
execute stmt using @a;
execute stmt0 using @a;
select * from t1;

set @a='aaag';
execute stmt using @a;
execute stmt0 using @a;
