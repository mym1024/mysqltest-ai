###2-1:创建普通索引，合并后索引是否可用
create table t1 (c1 int primary key,c2 int,c3 int);

set autocommit=1;
create index il0 on t1(c2) storing (c3);
insert into t1 values(1,1,1);
commit;

set autocommit =0;
show index on t1;

--echo "merge"
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT major_freeze | tail -1;
--real_sleep 600
exec $LOCAL_DIR/tools/as_admin -r $RS0_IP -p $RS0_PORT stat -o merge | tail -1;

show index on t1;
select * from __3001__idx__il0;

set autocommit=1;
insert into t1 values(2,2,2);
create index il1 on t1(c2) storing (c3);
