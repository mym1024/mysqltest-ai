alter table test add current expire_info='c4=#2020-08-07#';

#在带有索引的主表上创建时间戳常量比较的expire_info：(部分索引中过期列不在索引列中，失败)
drop table if exists test;
create table test(c1 int primary key, c2 int, c3 int, c4 datetime);
create index i1 on test(c3);
create index i2 on test(c4);
--error 152
alter table test add current expire_info='c4=#2020-08-07#';

#删除不含过期列的索引idx后创建expire_info：(成功)
drop index i1 on test;
