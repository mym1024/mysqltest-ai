create table t2 (
  id int,
  category int,
  county int,
  state int,
  phones int,
  nophones int,
  primary key (id)
) partition by list(id)(partition a1 values in (1,2,3),partition a2 values in(4,5));
--real_sleep 3
insert into t2 values (3,2,11,12,5400,7800);
insert into t2 values (4,2,25,12,6500,11200);
