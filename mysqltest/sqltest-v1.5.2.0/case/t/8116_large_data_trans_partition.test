#####################################Do sql###################################################

--disable_warnings
drop table if exists t1;
--enable_warnings

create table t1(i int primary key,c1 char(20),c256 char(256),dt datetime,d datetime) partition by range(i) (partition r0 values less than (5),partition r2 values less than (3000),partition r3 values less than maxvalue);

###2-1:在一个事务中大量执行insert操作
begin;
--real_sleep 5
let $i=0;
while($i < 3000)
{
   eval insert into t1(i,c1,c256,dt,d) values($i,'1','$i','2012-10-10 12:00:00','2012-10-10');
   inc $i;
}
commit;


###2-2:在一个事务中大量执行replace操作
begin;
let $i=0;
while($i < 3000)
{
   eval replace into t1(i,c1,c256,dt,d) values($i,'1','$i','2012-10-10 12:00:00','2012-10-10');
   inc $i;
}
commit;


###2-3:在同一个事务中大量update操作
begin;
let $i=0;
while($i < 3000)
{
   eval update t1 set c1='update_$i' where i=$i;
   inc $i;
}
commit;


###2-4:在同一个事务中大量select操作
begin;
let $i=0;
while($i < 3000)
{
   eval select * from t1 where i=$i for update;
   inc $i;
}
commit;


###2-5:在同一个事务中大量delete操作
begin;
let $i=0;
while($i < 3000)
{
   eval delete from t1 where i=$i;
   inc $i;
}
commit;
drop table t1;

